<?xml version="1.0"
      encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!--
   - ReservationDTO mapping file.
   -
   - Author: Team PayDay
-->

<hibernate-mapping>
  <class name="ca.qc.collegeahuntsic.bibliotheque.dto.ReservationDTO"
         table="RESERVATION">
         <id name="idReservation"
             type="string">
             <column name="IDRESERVATION">
             </column>
             <generator class="sequence">
                        <param name="sequence">SEQ_ID_PRET</param>
             </generator>
         </id>
              <many-to-one name="membreDTO"
                      class="ca.qc.collegeahuntsic.bibliotheque.dto.MembreDTO"
                      not-null="true">
                      <column name="IDMEMBRE">
                      </column>
         </many-to-one>   
         <many-to-one name="livreDTO"
                      class="ca.qc.collegeahuntsic.bibliotheque.dto.LivreDTO"
                      not-null="true">
                      <column name="IDLIVRE">
                      </column>
         </many-to-one>         
         <property name="dateReservation" type="java.sql.Timestamp">
            <column name="DATERESERVATION">
            </column>
        </property>
  </class>
</hibernate-mapping>
